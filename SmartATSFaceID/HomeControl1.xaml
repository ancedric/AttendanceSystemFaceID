<UserControl x:Class="HomeControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SmartATSFaceID"
             mc:Ignorable="d" 
             d:DesignHeight="450" Loaded="UserControl_Loaded" Width="730">
    <Grid Background="#FFD1DCF5" Margin="0,0,0,-153">
        <Image x:Name="homeImage" HorizontalAlignment="Left" Height="237" Margin="41,111,0,0" VerticalAlignment="Top" Width="253" Source="/Images/reconnaissance-faciale-biometrique-et-verification-de-l-identite.jpg" Stretch="UniformToFill"/>
        <Label x:Name="adminNameLabel" Content="Label" HorizontalAlignment="Left" Margin="511,38,0,0" VerticalAlignment="Top" Width="187" FontFamily="Century Gothic" FontSize="14"/>
        <Rectangle HorizontalAlignment="Left" Height="1" Margin="35,70,0,0" VerticalAlignment="Top" Width="663" Fill="#FF2F38C1" RenderTransformOrigin="0.5,0.5" RadiusX="1" RadiusY="1">
            <Rectangle.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Rectangle.RenderTransform>
        </Rectangle>
        <Label x:Name="sessionPasswordLabel" Content="Mot de Passe : " HorizontalAlignment="Left" Margin="340,127,0,0" VerticalAlignment="Top" Foreground="#FF2F38C1"/>
        <Rectangle x:Name="openSessionBtn" HorizontalAlignment="Left" Height="44" Margin="331,181,0,0" VerticalAlignment="Top" Width="367" RadiusX="5" RadiusY="5" Fill="#FF2F38C1" Cursor="Hand"/>
        <Label x:Name="sessionButonLabel" Content="Ouvrir une session" HorizontalAlignment="Left" Margin="456,191,0,0" VerticalAlignment="Top" Foreground="White" FontFamily="Century Gothic" Width="116"/>
        <PasswordBox x:Name="sessionPasswordTextBox" HorizontalAlignment="Left" Height="52" Margin="331,114,0,0" VerticalAlignment="Top" Width="367" Background="{x:Null}" BorderBrush="#FF2F38C1" Foreground="#FF2F38C1" SelectionBrush="{x:Null}" VerticalContentAlignment="Center" Padding="100,0,0,0"/>
        <Label Content="ADMIN DASHBOARD" HorizontalAlignment="Left" Margin="65,38,0,0" VerticalAlignment="Top" FontFamily="Arial Black" FontSize="16"/>
        <Label Content="About" HorizontalAlignment="Left" Margin="635,234,0,0" VerticalAlignment="Top" Width="63" FontFamily="Arial Black"/>
        <Label HorizontalAlignment="Left" Margin="331,258,0,0" VerticalAlignment="Top" Height="90" Width="367" FontFamily="Century Gothic">
            <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Text="Une solution de pointe pour la gestion des présences et absences dans une entreprise. Conçue pour être rapide et efficafe, SmartATS FaceID, favorise un gain de temps considérable en utilisant la biométrie pour reconnaitre automatiquement la personne qui se présente." VerticalAlignment="Center" Width="357" TextAlignment="Justify" Height="78"/>
        </Label>
        <Button Content="How to use ?" HorizontalAlignment="Left" Height="38" Margin="84,365,0,0" VerticalAlignment="Top" Width="166" FontFamily="Dubai Medium" FontSize="20" Background="{x:Null}" Foreground="#FF2F38C1" BorderBrush="#FF2F38C1"/>
        <Label Content="STATISTIQUES" HorizontalAlignment="Left" Height="44" Margin="331,373,0,0" VerticalAlignment="Top" Width="345" FontFamily="Dubai Medium" FontSize="20" FontWeight="Bold"/>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="159" Margin="331,410,0,0" VerticalAlignment="Top" Width="375" CornerRadius="10,10,10,10" />
        <Border BorderBrush="#FF5158A1" BorderThickness="1" HorizontalAlignment="Left" Height="39" Margin="611,422,0,0" VerticalAlignment="Top" Width="73"/>
        <Label Content="0" HorizontalAlignment="Left" Height="37" Margin="615,418,0,0" VerticalAlignment="Top" Width="66" FontFamily="Dubai Medium" FontSize="24" Foreground="#FF4C27CB" BorderBrush="#FF0D3789"/>
        <Border BorderBrush="#FF5158A1" BorderThickness="1" HorizontalAlignment="Left" Height="39" Margin="611,468,0,0" VerticalAlignment="Top" Width="74"/>
        <Label Content="0" HorizontalAlignment="Left" Height="37" Margin="616,464,0,0" VerticalAlignment="Top" Width="66" FontFamily="Dubai Medium" FontSize="24" Foreground="#FF4C27CB" BorderBrush="#FF0D3789"/>
        <Border BorderBrush="#FF5158A1" BorderThickness="1" HorizontalAlignment="Left" Height="39" Margin="611,512,0,0" VerticalAlignment="Top" Width="73"/>
        <Label Content="0" HorizontalAlignment="Left" Height="37" Margin="614,512,0,0" VerticalAlignment="Top" Width="66" FontFamily="Dubai Medium" FontSize="24" Foreground="#FF4C27CB" BorderBrush="#FF0D3789"/>
        <Label Content="Employézs ajoutés" HorizontalAlignment="Left" VerticalAlignment="Top" Width="184" FontFamily="Arial Black" FontSize="16" Margin="355,434,0,0"/>
        <Label Content="Employés en service" HorizontalAlignment="Left" VerticalAlignment="Top" Width="217" FontFamily="Arial Black" FontSize="16" Margin="355,468,0,0"/>
        <Label Content="Employés absents" HorizontalAlignment="Left" VerticalAlignment="Top" Width="217" FontFamily="Arial Black" FontSize="16" Margin="355,510,0,0"/>
    </Grid>
</UserControl>
