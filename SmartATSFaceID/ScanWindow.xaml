<Window x:Class="ScanWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmartATSFaceID"
        mc:Ignorable="d"
        Title="Scan Window" Height="600" Width="900"
        WindowStartupLocation="CenterScreen" Loaded="ScanWindow_Loaded" Closing="ScanWindow_Closing" ResizeMode="NoResize" WindowStyle="None">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="277*"/>
            <ColumnDefinition Width="23*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#FF007ACC" Padding="10" Grid.ColumnSpan="2">
            <StackPanel Orientation="Vertical" Margin="638,-8,-36,-70"/>
        </Border>
        <Grid Grid.Row="1" Margin="10,10,10,10" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>
            <Border Grid.Column="0" Background="Black" Margin="0,0,10,0" CornerRadius="5">
                <Image x:Name="CameraFeedImage"/>
            </Border>
            <TextBlock x:Name="LblStatus" Text="Prêt" Foreground="LightGreen" Margin="21,426,11,81" Grid.Column="1"/>
            <Rectangle x:Name="BtnTrain" RadiusX="5" RadiusY="5" Fill="#FFDE2613" Cursor="Hand" Margin="12,313,10,190" Grid.Column="1"/>
            <PasswordBox x:Name="sessionPwd" VerticalContentAlignment="Center" BorderBrush="#FF3044B0" Margin="12,233,10,280" Grid.Column="1" />
            <Label Content="Mot de passe de  session" Margin="10,193,12,332" Grid.Column="1"/>
            <Rectangle x:Name="BtnStop" RadiusX="5" RadiusY="5" Fill="#FFDE2613" Cursor="Hand" Margin="12,113,12,390" Grid.Column="1" StrokeDashCap="Round"/>
            <Rectangle x:Name="BtnStart" RadiusX="5" RadiusY="5" Fill="#FF13DE3B" Cursor="Hand" Margin="12,30,12,478" Grid.Column="1"/>
            <Label x:Name="sessionButonLabel_Copy" Content="Arrêter la camera" Foreground="White" FontFamily="Century Gothic" Width="116" Margin="90,129,94,402" Grid.Column="1"/>
            <Label x:Name="sessionButonLabel_Copy1" Content="Démarrer la camera" Foreground="White" FontFamily="Century Gothic" Margin="82,42,80,490" Grid.Column="1"/>
            <Label x:Name="sessionButonLabel" Content="Fermer la session" Foreground="White" FontFamily="Century Gothic" Width="116" Margin="92,328,92,208" Grid.Column="1"/>
        </Grid>
        <StatusBar Grid.Row="1" Background="#FF007ACC" Grid.ColumnSpan="2" Margin="0,521,0,0" Grid.RowSpan="2">
            <StatusBarItem>
                <TextBlock x:Name="LblFps" Text="FPS: 0" Foreground="White"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
